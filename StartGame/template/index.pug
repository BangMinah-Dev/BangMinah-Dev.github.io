
extends template-part/layout.pug

//- Cover
mixin slide(src_1, src_2, text="FREE TO PLAY", src_3, alt="image")
    .slide
        img.background(src = src_1, alt = alt)
        .content
            .gameName
                img(src= src_2, alt = alt)
            .button
                button.btn=text
            .gameStudio
                img(src=src_3, alt = alt)

//- Product item
mixin product(src, alt="product image")
    .product
        img(src=src, alt=alt)


//- New
mixin blogBox(src, alt="blog image", h4, p)
    .box 
        .image 
            img(src=src, alt=alt)
        .text 
            h4=h4
            p=p



